class Solution {
    public List<List<Integer>> minimumAbsDifference(int[] arr) {
        Arrays.sort(arr);
        int n = arr.length;
        List<List<Integer>> list = new ArrayList<>();
        
        int d = Integer.MAX_VALUE;
        
 //Get the first min
          for(int i =0;i<n-1;i++){
              int val = arr[i+1] -arr[i];
              if(val < d)
                  d = val;
          }
// Add pairs in list
      
        for(int i =0;i<n-1;i++){
            if(arr[i+1]- arr[i] == d){
                  List<Integer> pair = new ArrayList<>(2);
                 pair.add(arr[i]);
                pair.add(arr[i+1]);
                list.add(pair);
                }
            
        }
        return list;
        
    }
}
