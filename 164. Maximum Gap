class Solution {
    public int maximumGap(int[] nums) { 
        if(nums.length == 0 || nums.length == 1) return 0;
        Arrays.sort(nums);
        int maxGap = Integer.MIN_VALUE;
        for(int i= 1;i <nums.length;i++){
            if(maxGap < Math.abs(nums[i-1]-nums[i]))
                maxGap = Math.abs(nums[i-1]-nums[i]);
        }
        return maxGap;
        
    }
}
